<div class="bottom-padding">
  <%= form_for(@link, :html => { :class => 'form-inline' }) do |f| %>
    <% if @link.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@link.errors.count, "error") %> kept this link from being saved:</h3>

        <ul>
        <% @link.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <div class="controls">
        <%= f.text_field :url, :size => 20, :class => "input-large span8", :placeholder => "Amazon URL" %>
        <%= f.submit "tag!", :class => "btn btn-primary btn-large" %>
      </div>
    </div>
  <% end %>
</div>
